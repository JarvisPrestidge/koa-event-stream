{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "dom",
            "es2018"
        ],
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "pretty": true,
        "declaration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true
    },
    "include": [
        "src"
    ]
}
